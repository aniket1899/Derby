<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aniket.derby.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="#E8E8E8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_Challenge_a_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="3dp"
                app:cardCornerRadius="3dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginBottom="12dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/challenge_a_team"
                        android:id="@+id/home_card_image_Challenge_a_team"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:padding="4sp"
                        android:id="@+id/home_card_title_Challenge_a_team"
                        android:textSize="30sp"
                        android:textAlignment="center"
                        android:text="Challenge Team"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:padding="4sp"
                        android:id="@+id/home_card_sub_title_Challenge_a_team"
                        android:textSize="15sp"
                        android:textColor="#484848"
                        android:textAlignment="center"
                        android:text="Challenge another team by using random search using your prefered credentials"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_put_a_challenge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:elevation="3dp"
                app:cardCornerRadius="3dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/put_challenge"
                        android:id="@+id/home_card_image_Put_a_challenge"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:padding="4sp"
                        android:id="@+id/home_card_title_Put_a_challenge"
                        android:textSize="30sp"
                        android:textAlignment="center"
                        android:text="Put Challenge"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:padding="4sp"
                        android:id="@+id/home_card_sub_title_Put_a_challenge"
                        android:textSize="15sp"
                        android:textColor="#484848"
                        android:textAlignment="center"
                        android:text="Put your challenge in the Challenge Pool for other teams to find and accept your challenge"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"

                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_Search_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="3dp"
                app:cardCornerRadius="3dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginBottom="12dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/search_turf"
                        android:id="@+id/home_card_image_Search_for_teams"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:padding="4sp"
                        android:id="@+id/home_card_title_Search_for_teams"
                        android:textSize="30sp"
                        android:textAlignment="center"
                        android:text="Search for Teams"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:padding="4sp"
                        android:id="@+id/home_card_sub_title_Search_for_teams"
                        android:textSize="15sp"
                        android:textColor="#484848"
                        android:textAlignment="center"
                        android:text="Search for another team by name of the team"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"

                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_Book_turf_slots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:elevation="3dp"
                app:cardCornerRadius="3dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/search_turf2"
                        android:id="@+id/home_card_image_Book_turf_slots"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:padding="4sp"
                        android:id="@+id/home_card_title_Book_turf_slots"
                        android:textSize="30sp"
                        android:textAlignment="center"
                        android:text="Book Turf Slots"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:padding="4sp"
                        android:id="@+id/home_card_sub_title_Book_turf_slots"
                        android:textSize="15sp"
                        android:textColor="#484848"
                        android:textAlignment="center"
                        android:text="Book time slots for turfs"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"

                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_Events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:elevation="3dp"
                app:cardCornerRadius="3dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/camp_nou"
                        android:id="@+id/home_card_image_Events"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:padding="4sp"
                        android:id="@+id/home_card_title_Events"
                        android:textSize="30sp"
                        android:textAlignment="center"
                        android:text="Events"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:padding="4sp"
                        android:id="@+id/home_card_sub_title_Events"
                        android:textSize="15sp"
                        android:textColor="#484848"
                        android:textAlignment="center"
                        android:text="Check out all the upcoming events at different venues"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"

                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
