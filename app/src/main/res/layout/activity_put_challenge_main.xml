<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aniket.derby.PutChallengeMainActivity"
    android:background="@color/colorBack"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/put_challenge_main_result_text"
        android:layout_centerInParent="true"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Put your Challenge in the Challenge Pool?"
        android:background="@drawable/rect_text_view_border"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Put Challenge"
        android:layout_marginBottom="24dp"
        android:id="@+id/put_challenge_main_button_progress"
        android:textSize="15sp"
        android:background="@drawable/white_circular_button"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/put_challenge_main_result_text"
        />

</RelativeLayout>
